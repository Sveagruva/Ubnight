{
  "manifest_version": 3,
  "version": "0.2",
  "name": "Ubnight",
  "description": "endless night",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["main.js"],
    "css" : ["darkScreen_ubnight.css"],
    "run_at": "document_start",
    "all_frames": true,
    "match_about_blank": true
  }],
  "icons": {
    "128": "icons/128.png",
    "48": "icons/48.png",
    "32": "icons/32.png",
    "16": "icons/16.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "default_locale": "en",
  "homepage_url": "https://github.com/Sveagruva/Ubnight"
}